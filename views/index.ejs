<!DOCTYPE html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortener</title>
</head>
<body>
    <h1>URL Shortener</h1>
    <form action="/shorten" method="POST" class="theform">
        <input type="url" name="url" placeholder="https://krypton.sh/">
        <button type="submit">submit</button>
    </form>
    <div class="boink" />
    <table>
        <thead>
            <tr>
                <th>Full URL</th>
                <th>Shortened URL</th>
                <th>Uses</th>
                <th>Created at</th>
            </tr>
        </thead>
        <tbody>
            <% shortUrls.forEach(shortUrl => { %>
            <tr>
                <td>
                    <a href="<%= shortUrl.original %>">
                        <%= shortUrl.original %>
                    </a>
                </td>
                <td>
                    <a href="<%= shortUrl.short %>">
                        /<%= shortUrl.short %>
                    </a>
                </td>
                <td>
                    <span>
                        <%= shortUrl.clicks %>
                    </span>
                </td>
                <td>
                    <span>
                        <%= shortUrl.createdAt %>
                    </span>
                </td>
            </tr>
            <% }) %>
        </tbody>
    </table>
</body>
<style>
    * {
        box-sizing: border-box;
    }

    body {
        font-family: Roboto, sans-serif;
        background-color: #151515;
        color: white;
    }

    a {
        color: white;
    }

    a:visited {
        color: grey;
    }

    h1 {
        font-family: "Jetbrains Mono";
        text-align: center;
    }

    table {
        border-collapse: collapse;
        width: 100%;
    }

    thead {
        font-family: "Jetbrains Mono";
        border-bottom: 1px solid white;
        padding-top: 2em;
    }

    th, td {
        text-align: left;
        padding: 8px;
        color: white;
    }

    .boink {
        padding-top: 1em;
    }

    .theform {
        display: flex;
        flex-direction: row;
        justify-content: center;
    }

    input[type='url'] {
        font-family: Roboto;
        background-color: #2e2e2e;
        border-radius: 8px;
        height: 2.5em;
        padding: 0 16px;
        border: none;
        color: white;
    }

    button {
        background-color: #2e2e2e;
        color: darkgrey;
        border-radius: 8px;
        height: 2.5em;
        padding: 0 16px;
        border: none;
        margin-left: 1em;
    }
</style>
</html>